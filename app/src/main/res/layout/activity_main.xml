<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="saldo"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150px"
                android:text="Saldo"
                android:textSize="36sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android_background="#000000">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Ingresos:"
                    android:textSize="18sp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:id="@+id/tvIngresos"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Valor1"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Egresos: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvEgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Valor2"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Gastos T. CrÃ©dito:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvTarjCred"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Valor3"
                    android:textSize="18sp"
                    android:textAlignment="textEnd" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/bNuevoIngreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ejecutarIngreso"
            android:text="Nuevo Ingreso" />

        <Button
            android:id="@+id/bNuevoEgreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ejecutarEgreso"
            android:text="Nuevo Egreso" />

        <Button
            android:id="@+id/bDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ejecutarDetalle"
            android:text="Detalle" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>